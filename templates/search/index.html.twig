{% extends 'backBase.html.twig' %}


{% block body %}

    <div class="main-panel">
        <div  class="content-wrapper">
            <div class="page-header">
                <h1>QR-Code âœ…</h1> <hr>

            </div>
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div>

                        <!-- General Form Elements -->
                        {{ form_start(form,{attr:{novalidate:'novalidate'}}) }}
                        <div class="form-group">
                            <label for="inputText" class="col-sm-4 col-form-label">Nom</label>

                            {{ form_widget(form.nom,{'attr':{'class':'form-control'}}) }}

                        </div>
                        <div class="text-danger">{{ form_errors(form.nom) }}</div>


                        <div class="form-group">
                            <label for="inputText" class="col-sm-4 col-form-label">Description</label>

                            {{ form_widget(form.description,{'attr':{'class':'form-control'}}) }}
                        </div>
                        <div class="text-danger">{{ form_errors(form.description) }}</div>
                        <div class="form-group">
                            <label for="inputText" class="col-sm-4 col-form-label">Adresse</label>

                            {{ form_widget(form.adresse,{'attr':{'class':'form-control'}}) }}
                        </div>
                        <div class="text-danger">{{ form_errors(form.adresse) }}</div>
                        <div class="form-group">
                            <label for="inputText" class="col-sm-4 col-form-label">Categorie</label>

                            {{ form_widget(form.categorie,{'attr':{'class':'form-control'}}) }}

                        </div>
                        <div class="text-danger">{{ form_errors(form.categorie) }}</div>
                        <div class="form-group">
                            <label for="inputText" class="col-sm-4 col-form-label">Chambres</label>

                            {{ form_widget(form.nbchdispo,{'attr':{'class':'form-control'}}) }}

                        </div>

                        <div class="form-group">
                            <label for="inputText" class="col-sm-4 col-form-label">Email</label>

                            {{ form_widget(form.email,{'attr':{'class':'form-control'}}) }}

                        </div>

                        <div class="form-group">
                            <label for="inputText" class="col-sm-4 col-form-label">Telephone</label>

                            {{ form_widget(form.telephone,{'attr':{'class':'form-control'}}) }}

                        </div>


                        <br/>
                        <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

                            <button type="submit" class="btn btn-primary mr-2">Ajouter Qr Code</button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                    <div class="col-md-6">
                        {% if qrCode %}
                            <img src="{{ qrCode }}" alt="qr-code">
                        {% endif %}
                    </div>
                </div>
            </div>

        </div>




    </div>


{% endblock %}







