{% extends 'backBase.html.twig' %}


{% block body %}

    <div class="main-panel">
        <div  class="content-wrapper">
            <div class="page-header">
                <h3 class="page-title"> Hotels </h3>

            </div>
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div>

                    <!-- General Form Elements -->
                    {{ form_start(f,{attr:{novalidate:'novalidate'}}) }}
                        <div class="form-group">
                    <label for="inputText" class="col-sm-4 col-form-label">Nom</label>

                        {{ form_widget(f.nom,{'attr':{'class':'form-control'}}) }}

                    </div>
                        <div class="text-danger">{{ form_errors(f.nom) }}</div>


                        <div class="form-group">
                    <label for="inputText" class="col-sm-4 col-form-label">Description</label>

                        {{ form_widget(f.description,{'attr':{'class':'form-control'}}) }}
                    </div>
                        <div class="text-danger">{{ form_errors(f.description) }}</div>
                        <div class="form-group">
                    <label for="inputText" class="col-sm-4 col-form-label">Adresse</label>

                        {{ form_widget(f.adresse,{'attr':{'class':'form-control'}}) }}
                    </div>
                        <div class="text-danger">{{ form_errors(f.adresse) }}</div>
                        <div class="form-group">
                    <label for="inputText" class="col-sm-4 col-form-label">Categorie</label>

                        {{ form_widget(f.categorie,{'attr':{'class':'form-control'}}) }}

                    </div>
                        <div class="text-danger">{{ form_errors(f.categorie) }}</div>
                        <div class="form-group">
                    <label for="inputText" class="col-sm-4 col-form-label">Chambres</label>

                        {{ form_widget(f.nbchdispo,{'attr':{'class':'form-control'}}) }}

                    </div>

                        <div class="form-group">
                    <label for="inputText" class="col-sm-4 col-form-label">Email</label>

                        {{ form_widget(f.email,{'attr':{'class':'form-control'}}) }}

                    </div>

                        <div class="form-group">
                    <label for="inputText" class="col-sm-4 col-form-label">Telephone</label>

                        {{ form_widget(f.telephone,{'attr':{'class':'form-control'}}) }}

                    </div>


                    <br/>
                    <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

                        <button type="submit" class="btn btn-primary mr-2">Ajouter</button>
                    </div>

                    {{ form_end(f) }}
                    </div>
                </div>
            </div>

        </div>




    </div>


{% endblock %}



