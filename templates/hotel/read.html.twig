{% extends 'backBase.html.twig' %}

{% block title %}Hello Admin!{% endblock %}

{% block body %}

    <div class="main-panel">
        <div class="content-wrapper">
            <div class="page-header">
                <h3 class="page-title"> Hotels </h3>

            </div>
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">

                        <div class="table-responsive">
                            <table class="table table-striped ">
                                <thead>
                                <tr class="hh">
                                    <th>#</th>
                                    <th>Nom</th>
                                    <th>Description</th>
                                    <th>Adresse</th>
                                    <th>Categorie</th>
                                    <th>Chambres</th>
                                    <th>Email</th>
                                    <th>Telephone</th>
                                </tr>
                                </thead>
                                {% for l in tab %}
                                    <tbody>

                                    <tr onclick="" class="hh">
                                        <td class="py-1">

                                            <img src="{{ asset('back/images/faces-clipart/pic-8.png') }}" alt="image" />
                                        </td>
                                        <td> {{ l.nom }} </td>
                                        <td> {{ l.description }} </td>
                                        <td> {{ l.adresse }} </td>
                                       <th>  {{ l.Categorie }} </th>
                                        <td> {{ l.nbchdispo }} </td>
                                        <td> {{ l.email }} </td>
                                        <td> {{ l.telephone }} </td>
                                        <td> <a class="" href="{{ path('modifier',{'id':l.idHotel}) }}">
                                                <i class="mdi mdi-pencil"></i>
                                            </a></td>
                                        <td> <a class="" href="{{ path('delete',{'id':l.idHotel}) }}">
                                                <i class="mdi mdi-delete-forever"></i>
                                            </a></td>


                                    </tr>

                                    </tbody>
                                {% endfor %}
                            </table>
                        </div>

                </div>
            </div>
        </div>

    </div>
{% endblock %}
