{% extends 'frontBaseC.html.twig' %}
{% block title %}Nos offres{% endblock %}
{% block body %}
    <h3>Nos offres</h3>
    <div>
        <br>
        <table class="table">
            <thead>
            <tr>

                <th>Déscription</th>
                <th>Tarif</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for offre in offres %}
                <tr>

                    <td>{{ offre.description }}</td>
                    <td>{{ offre.tarif }}</td>
                    <td>
                        <a href="{{ path('showOffreC',{'id':offre.id}) }}">Détails</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6"></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

