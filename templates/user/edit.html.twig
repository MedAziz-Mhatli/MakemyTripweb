{% extends 'base.html.twig' %}

{% block content %}
<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card">
            <div class="card-header">{{ 'Editer mes infos'|trans }}</div>
            <div class="card-body">
                <br>
                {{ form_start(form) }}

                <div class="form-group">
                    <label class="control-label">Email</label>
                    <p class="form-control-static">{{ app.user.email }}</p>
                </div>


                {{ form_row(form.name) }}
                {{ form_row(form.phone) }}
                {{ form_row(form.password) }}

                <button type="submit" class="btn btn-default btn-primary btn-block" formnovalidate>{{ ' Enregister'|trans }}</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
